# Production Environment Variables for Docker Deployment
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (Required)
OPENAI_API_KEY=your_production_openai_api_key_here

# Optional: Eventbrite API Configuration
EVENTBRITE_API_KEY=your_eventbrite_api_key_here

# Server Configuration
PORT=8000
HOST=0.0.0.0

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=/app/chroma_db

# Security Configuration
SECRET_KEY=your_secret_key_here_change_this_in_production

# CORS Configuration (Update with your actual domain)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Default LLM Provider
DEFAULT_LLM_PROVIDER=openai

# Docker-specific configurations
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
